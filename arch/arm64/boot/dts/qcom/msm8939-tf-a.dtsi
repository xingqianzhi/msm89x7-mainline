	cpu-idle-states = <&CPU_SLEEP_0>;
};
&cpu6 {
	enable-method = "psci";
	cpu-idle-states = <&CPU_SLEEP_0>;
};
&cpu7 {
	enable-method = "psci";
	cpu-idle-states = <&CPU_SLEEP_0>;
};

/* CPU power management hardware is reserved by the PSCI firmware */
&acc0 {
	status = "reserved";
};
&saw0 {
