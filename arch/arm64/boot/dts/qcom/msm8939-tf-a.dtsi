/* FIXME: Dummy node to make msm8916-tf-a.dtsi happy */
/ {
	/omit-if-no-ref/ camss: camss {};
	/omit-if-no-ref/ venus: venus {};
};

#include "msm8916-tf-a.dtsi"

/ {
	psci {
		compatible = "arm,psci-1.0";
		method = "smc";
	};
};

&cpu0 {
	enable-method = "psci";
	cpu-idle-states = <&CPU_SLEEP_0>;
};
&cpu1 {
	enable-method = "psci";
	cpu-idle-states = <&CPU_SLEEP_0>;
};
&cpu2 {
	enable-method = "psci";
	cpu-idle-states = <&CPU_SLEEP_0>;
};
&cpu3 {
	enable-method = "psci";
	cpu-idle-states = <&CPU_SLEEP_0>;
};
&cpu4 {
	enable-method = "psci";
	cpu-idle-states = <&CPU_SLEEP_0>;
};
&cpu5 {
