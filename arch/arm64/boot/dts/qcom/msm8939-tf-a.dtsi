&gpu_smmu {
	/* Need to enable TBU clock during TLB operations */
	clocks = <&gcc GCC_SMMU_CFG_CLK>,
		 <&gcc GCC_GFX_TCU_CLK>,
		 <&gcc GCC_GFX_TBU_CLK>;
	clock-names = "iface", "bus", "tlb";
};
